<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android" >
<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=""
    android:layout_margin="5dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/geography_and_climate_layout_img8"
            android:layout_width="match_parent"
            android:layout_height="316dp"
            android:src="@drawable/img8" />

        <TextView
            android:id="@+id/geography_and_climate_layout_txt1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/string_geography_and_climate_1" />

        <TextView
            android:id="@+id/geography_and_climate_layout_txt2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/string_geography_and_climate_2"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/geography_and_climate_layout_txt3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/string_geography_and_climate_3" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>